{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "symbol": {
      "type": "string"
    },
    "interval": {
      "type": "string",
      "enum": [
        "5s",
        "1m",
        "5m"
      ]
    },
    "flow_color": {
      "type": "string",
      "enum": [
        "buy",
        "sell",
        "mixed",
        "neutral"
      ]
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "imbalance": {
          "type": "number"
        },
        "vwap_slippage_bps": {
          "type": "number"
        },
        "block_ratio": {
          "type": "number"
        }
      },
      "required": [
        "imbalance"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  },
  "required": [
    "symbol",
    "flow_color",
    "metrics",
    "confidence"
  ]
}